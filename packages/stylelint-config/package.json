{
	"name": "@wezom/stylelint-config",
	"version": "2.0.0-beta.0",
	"description": "Stylelint shareable config",
	"main": ".stylelintrc.json",
	"files": [
		".stylelintrc.json"
	],
	"scripts": {
		"auto-doc-rules": "node ../../utils/autoDocRules.js && prettier ./RULES.md --write",
		"test": "jest",
		"test:autofix": "stylelint \"./tests/fixtures/*.valid.css\" --fix && jest",
		"check-valid": "stylelint \"./tests/fixtures/*.valid.css\"",
		"check-invalid": "stylelint \"./tests/fixtures/comment-whitespace-inside.invalid.css\""
	},
	"license": "BSD-3-Clause",
	"author": {
		"name": "Oleg Dutchenko",
		"email": "dutchenko.o.dev@gmail.com"
	},
	"keywords": [
		"@wezom",
		"code-style",
		"stylelint",
		"stylelintconfig"
	],
	"publishConfig": {
		"access": "public"
	}
}
