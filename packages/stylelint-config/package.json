{
  "name": "@wezom/stylelint-config",
  "version": "0.1.0-beta.0",
  "description": "Stylelint shareable config",
  "main": ".stylelintrc.json",
  "files": [
    ".stylelintrc"
  ],
  "scripts": {
    "auto-doc-rules": "node ../../utils/autoDocRules.js",
    "test": "jest",
    "check-valid": "stylelint \"./tests/fixtures/*.valid.css\"",
    "check-invalid": "stylelint \"./tests/fixtures/*.invalid.css\""
  },
  "license": "BSD-3-Clause",
  "author": {
    "name": "Oleg Dutchenko",
    "email": "dutchenko.o.dev@gmail.com"
  },
  "keywords": [
    "@wezom",
    "code-style",
    "stylelint",
    "stylelintconfig"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "stylelint-config-recommended": "^3.0.0"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "stylelint": "^13.9.0"
  }
}
