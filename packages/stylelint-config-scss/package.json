{
	"name": "@wezom/stylelint-config-scss",
	"version": "2.0.0-beta.0",
	"description": "Stylelint shareable config for SCSS",
	"main": ".stylelintrc.json",
	"files": [
		".stylelintrc.json"
	],
	"scripts": {
		"auto-doc-rules": "node ../../utils/autoDocRules.js && prettier ./RULES.md --write",
		"test": "jest",
		"test:autofix": "stylelint \"./tests/fixtures/*.valid.scss\" --fix && jest",
		"check-valid": "stylelint \"./tests/fixtures/*.valid.scss\"",
		"check-invalid": "stylelint \"./tests/fixtures/*.invalid.scss\""
	},
	"license": "BSD-3-Clause",
	"author": {
		"name": "Oleg Dutchenko",
		"email": "dutchenko.o.dev@gmail.com"
	},
	"keywords": [
		"@wezom",
		"code-style",
		"stylelint",
		"stylelintconfig",
		"scss"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@wezom/stylelint-config": "file:../stylelint-config",
		"stylelint-scss": "^3.18.0"
	}
}
