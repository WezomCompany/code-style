{
	"extends": ["@wezom/stylelint-config"],
	"plugins": ["stylelint-scss"],
	"rules": {
		"at-rule-no-unknown": null,
		"function-name-case": [
			"lower",
			{
				"ignoreFunctions": [
					"ATTR",
					"CALC",
					"CLAMP",
					"CUBIC-BEZIER",
					"HSL",
					"HSLA",
					"LINEAR-GRADIENT",
					"MIN",
					"MAX",
					"PATH",
					"RADIAL-GRADIENT",
					"REPEATING-RADIAL-GRADIENT",
					"REPEATING-LINEAR-GRADIENT",
					"RGB",
					"RGBA",
					"STEPS",
					"VAR",
					"URL"
				]
			}
		],
		"max-nesting-depth": [
			5,
			{
				"ignore": ["pseudo-classes"]
			}
		],
		"scss/at-rule-no-unknown": true,
		"value-keyword-case": [
			"lower",
			{
				"ignoreKeywords": ["NULL"]
			}
		]
	}
}
